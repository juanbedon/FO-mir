<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">

      <h1>Sign Up</h1>

      <%= form_for @user do |f| %>
        <div class="form-group">
          <%= f.email_field :email, class: "form-control input-lg", placeholder: "Email" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, class: "form-control input-lg", placeholder: "Password" %>
        </div>

        <div class="form-group">
          <%= f.text_field :name, class: "form-control input-lg", placeholder: "Name" %>
        </div>

        <div class="form-group">
          <%= f.text_field :username, class: "form-control input-lg", placeholder: "Username" %>
        </div>

        <div class="actions">
          <%= f.submit "Create Account", class: "btn btn-primary btn-block btn-lg" %>
        </div>
      <% end %>
      
    </div>
  </div>
</div>